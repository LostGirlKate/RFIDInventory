<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:angle="180" android:startColor="@color/colorPrimary" android:endColor="@color/colorPrimary"
                        android:type="linear"/>
                    <corners android:radius="20dp" />
                </shape>
            </item>

            <item android:right="10dp"
                android:gravity="center|right"
                android:drawable="@drawable/ico_arrow_down"/>

        </layer-list>
    </item>
</selector>